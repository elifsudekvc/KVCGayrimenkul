@model KVCGayrimenkulWebUI.Dtos.CategoryDtos.UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kategori İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Kategori Güncelleme</div>
						</div>
						<div class="card-body">
							<input type="hidden"asp-for="CategoryID" />
							<div class="form-group">
								<label for="categoryname">Kategori Adını Giriniz</label>
								<input type="text" class="form-control" asp-for="CategoryName" id="categoryname">
							</div>
						</div>
						<div class="mb-4 mx-4">
							<button class="btn btn-outline-info">Kategoriyi Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

<style>
	.card {
		margin-bottom: 2rem;
		padding: 1rem;
		height: auto !important;
	}

</style>