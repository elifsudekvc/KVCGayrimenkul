@model CreateSocialMediaDto
@{
	ViewData["Title"] = "CreateSocialMediaDto";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Sosyal Medya İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Sosyal Medya Girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group p-0">
								<label for="title">Sosyal Medya Başlığı Giriniz</label>
								<input type="text" class="form-control" asp-for="Title" id="title">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group p-0">
								<label for="icon">Sosyal Medya ikonu Giriniz</label>
								<input type="text" class="form-control" asp-for="Icon" id="icon">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group p-0">
								<label for="url">Sosyal Medya Linki Giriniz</label>
								<input type="text" class="form-control" asp-for="Url" id="url">
							</div>
						</div>
						<div class="mb-4 mt-3 mx-3">
							<button class="btn btn-outline-info">Sosyal Medya Ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

