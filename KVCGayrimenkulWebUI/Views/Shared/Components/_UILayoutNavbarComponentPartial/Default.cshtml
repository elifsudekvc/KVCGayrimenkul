<script>
    window.addEventListener("scroll", function () {
        const navbar = document.querySelector(".navbar");
        const kvc = document.querySelector(".kvcTitle");
        const navLinks = document.querySelectorAll(".nav-link");
        const logo = document.querySelector(".logo");

        if (window.scrollY > 800) {
            navbar.classList.add("navbar-scrolled");
            kvc.classList.add("navlink-scrolled");
            navLinks.forEach((link) => link.classList.add("navlink-scrolled"));
            logo.src = "../../Picture/KVCLOGO2.png";
        } else {
            navbar.classList.remove("navbar-scrolled");
            kvc.classList.remove("navlink-scrolled");
            navLinks.forEach((link) => link.classList.remove("navlink-scrolled"));
            logo.src = "../../Picture/KVCLOGO3.png";
        }
    });

    document.addEventListener("DOMContentLoaded", function () {
        const togglerButton = document.querySelector(".navbar-toggler");
        const togglerIcon = togglerButton.querySelector("i");
        const navbarContent = document.querySelector("#navbarSupportedContent");

        togglerButton.addEventListener("click", function () {
            // Tıklama anında hemen ikonu değiştir
            if (togglerIcon.classList.contains("fa-bars")) {
                togglerIcon.classList.remove("fa-bars");
                togglerIcon.classList.add("fa-times");
            } else {
                togglerIcon.classList.remove("fa-times");
                togglerIcon.classList.add("fa-bars");
            }
        });

        // Menü kapandığında iconu tekrar 'bars' yap
        navbarContent.addEventListener('hidden.bs.collapse', function () {
            togglerIcon.classList.remove("fa-times");
            togglerIcon.classList.add("fa-bars");
        });

        // Menü açıldığında iconu 'times' yap
        navbarContent.addEventListener('shown.bs.collapse', function () {
            togglerIcon.classList.remove("fa-bars");
            togglerIcon.classList.add("fa-times");
        });
    });
</script>
