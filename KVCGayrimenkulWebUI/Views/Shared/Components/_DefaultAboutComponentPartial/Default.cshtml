                height: 45rem !important;
            }

            .aboutText {
                margin-top:-17rem !important;
            }
        }


    @@media screen and (max-width: 400px) {
        .kvcTitle {
            margin-left: 15px !important;
            font-size: large !important;
        }

        .nav-link {
            font-size: large !important;
        }

        .logo {
            display: none !important;
        }

        .Title {
            font-size: 1.6rem !important;
        }

        .secondTitle {
