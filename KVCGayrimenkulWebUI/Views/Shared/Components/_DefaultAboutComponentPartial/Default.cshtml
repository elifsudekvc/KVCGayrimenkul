@model List<ResultAboutDto>
@foreach(var item in Model)
{
    <div class="aboutContainer">
        <div class="parallax" data-aos="fade-up"></div>
        <div class="aboutText" data-aos="fade-up">
            <h1 class="aboutTitle color4" data-aos="fade-up">Hakkımızda</h1>
            <p class="aboutSecondTitle container" data-aos="fade-up">
                @item.Description
            </p>
            <div class="contactLinkContainer" data-aos="fade-up">
                <a href="/ContactPage" class="ContactLink Link nav-link active color5 ContactLink adsButton backgroundcolor4 color1 btn btn-lg" data-aos="fade-up">Bizimle İletişime Geçin</a>
            </div>
        </div>
    </div>
}


<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
<script>
    AOS.init({
        duration: 800,  // Animasyon süresi (milisaniye)
        easing: 'ease-in-out',  // Animasyon yumuşatma ayarı
    });
</script>


