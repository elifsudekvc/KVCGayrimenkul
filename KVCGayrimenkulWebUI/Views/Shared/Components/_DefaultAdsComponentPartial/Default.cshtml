@model List<ResultAdvertisementDto>
<div class="Ads" data-aos="fade-up">
    <p class="AdsTitle color1">Yeni İlanlar</p>

    <div class="AdsCard container">
        @foreach(var item in Model)
        {
        <div class="card">
            <img src="@item.ImageUrl" class="card-img-top" alt="...">
            <div class="card-body">
                    <h5 class="card-title">
                        @(item.AdvertisementName.Length > 25 ? item.AdvertisementName.Substring(0, 25) + "..." : item.AdvertisementName)
                    </h5>
            </div>
            <ul class="list-group list-group-flush">
                    <li class="list-group-item">@item.CategoryName </li>
                <li class="list-group-item">@item.AdvertisementTypeName </li>
                    <li class="list-group-item">@item.SquareMeters m² (Brüt)</li>
                    <li class="list-group-item priceFormat">@String.Format("{0:N0}", item.Price) ₺</li>

            </ul>
            <div class="card-body">
                <a href="#" class="card-link color4">İlan Detayına Git</a>
            </div>
        </div>
        }
    </div>

    <a href="/AdsPage" class="Link nav-link AdsLink mb-4 active color5 adsButton backgroundcolor4 color1 btn btn-lg">Tüm İlanlar</a>
</div>

<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
<script>
    AOS.init({
        duration: 800,  // Animasyon süresi (milisaniye)
        easing: 'ease-in-out',  // Animasyon yumuşatma ayarı
    });
</script>

