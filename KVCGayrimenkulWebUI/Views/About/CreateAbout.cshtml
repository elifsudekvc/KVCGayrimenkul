@model CreateAboutDto
@{
	ViewData["Title"] = "CreateAbout";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkımızda İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Hakkımızda Girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="description">Hakkımızda Giriniz</label>
								<textarea rows="5"  class="form-control" asp-for="Description" id="description"></textarea>
							</div>
						</div>
						<div class="mb-4 mx-4">
							<button class="btn btn-outline-info">Hakkımızda Ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

<style>
	.card {
		margin-bottom: 2rem;
		padding: 1rem;
		height: auto !important;
	}

</style>