@model UpdateContactDto
@{
	ViewData["Title"] = "CreateContact";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İletişim Bilgisi İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">İletişim Bilgisi Güncelleme</div>
						</div>
						<input type="hidden" asp-for="ContactID"/>
						<div class="card-body">
							<div class="form-group p-0">
								<label for="location">Lokasyon Giriniz</label>
								<input type="text" class="form-control" asp-for="Location" id="location">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group p-0">
								<label for="phone">Telefon Numarası Giriniz</label>
								<input type="number" class="form-control" asp-for="Phone" id="phone">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group p-0">
								<label for="mail">Mail Adresi Giriniz</label>
								<input type="email" class="form-control" asp-for="Mail" id="mail">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group p-0">
								<label for="footerDescription">Açıklama Giriniz</label>
								<input type="text" class="form-control" asp-for="FooterDescription" id="footerDescription">
							</div>
						</div>
						<div class="mb-4 mt-3 mx-3">
							<button class="btn btn-outline-info">İletişim Bilgisini Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

<style>
	.card {
		margin-bottom: 2rem;
		padding: 1rem;
		height: auto !important;
	}

</style>