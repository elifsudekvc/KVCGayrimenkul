@model UpdateMessageDto
@{
	ViewData["Title"] = "UpdateMessage";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Mesaj İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Mesaj Girişi</div>
						</div>
						<input type="hidden" asp-for="MessageID"/>
						<div class="card-body">
							<div class="form-group p-0">
								<label for="name">İsim Giriniz</label>
								<input type="text" class="form-control" asp-for="Name" id="name">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group p-0">
								<label for="surName">Soyisim Giriniz</label>
								<input type="text" class="form-control" asp-for="SurName" id="surName">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group p-0">
								<label for="phone">Telefon Numarası Giriniz</label>
								<input type="number" class="form-control" asp-for="Phone" id="phone">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group p-0">
								<label for="mail">Mail Adresi Giriniz</label>
								<input type="email" class="form-control" asp-for="Mail" id="mail">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group p-0">
								<label for="personMessage">Mesaj Giriniz</label>
								<textarea rows="5" class="form-control" asp-for="PersonMessage" id="personMessage"></textarea>
							</div>
						</div>
						<div class="mb-4 mt-3 mx-3">
							<button class="btn btn-outline-info">Mesaj Ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

