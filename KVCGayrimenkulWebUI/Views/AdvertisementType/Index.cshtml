@model List<ResultAdvertisementTypeDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İlan Tipi İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İlan Tipi Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							İlan Tipi ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
						</div>
						<a href="/AdvertisementType/CreateAdvertisementType/" class="btn btn-outline-info m-1">Yeni İlan Tipi Girişi</a>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">İlan Tipi</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.AdvertisementTypeID</td>
										<td>@item.AdvertisementTypeName</td>
										<td>@item.AdvertisementTypeStatus</td>
										<td><a href="/AdvertisementType/DeleteAdvertisementType/@item.AdvertisementTypeID" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/AdvertisementType/UpdateAdvertisementType/@item.AdvertisementTypeID" class="btn btn-outline-warning">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>

			</div>

		</div>
	</div>
</div>
